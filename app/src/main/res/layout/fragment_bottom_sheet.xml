<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/black_tn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragments.BottomSheet"
    android:paddingBottom="20dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="7dp"
            android:background="@drawable/banner_title_background"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/holder"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/anonim"
                android:id="@+id/movieFocusImg"
                android:background="@color/black_tn"
                android:layout_width="360dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:maxWidth="300dp"
                    android:id="@+id/FocusTitle"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_tn"
                    android:paddingLeft="15dp"
                    android:text="Movie Title"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.like.LikeButton
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    app:icon_type="star"
                    app:icon_size="15dp"
                    android:id="@+id/star_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:circle_end_color="@color/orange_tn"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="12dp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FocusDate"
                    android:drawablePadding="6dip"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_time"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04.02.2017"/>

                <TextView
                    android:id="@+id/FocusLanguage"
                    android:drawablePadding="6dip"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_language"
                    android:paddingLeft="15dp"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="En"/>

                <TextView
                    android:id="@+id/FocusImdb"
                    android:drawablePadding="6dip"
                    android:gravity="center"
                    android:drawableLeft="@drawable/mdb"
                    android:paddingLeft="15dp"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7.5"/>

            </LinearLayout>

                <TextView
                    android:scrollbars = "vertical"
                    android:text="slkÅŸdngklwrngl"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/OverView"
                    android:textColor="@color/white"/>

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>