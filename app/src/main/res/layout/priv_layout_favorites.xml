<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutFavorite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_tn">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:id="@+id/imgCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/black_tn">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favoriteImg"
                android:background="@color/black_tn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/favorite_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/imgCardView"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/favoriteTitle"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category Title"
        android:textColorHint="@color/white"/>

</RelativeLayout>